<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Accesorios</title>
</head>
<body>
  <h1>Accesorios</h1>

  <div id="productos-accesorios">
   </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    socket.emit('requestAccesorios');

    socket.on('responseAccesorios', (accesorios) => {
      const container = document.getElementById('productos-accesorios');
      container.innerHTML = '';
      accesorios.forEach(product => {
        const div = document.createElement('div');
        div.textContent = `${product.name} - $${product.price}`;
        container.appendChild(div);
      });
    });

    socket.on('error', (msg) => {
      console.error('Error:', msg);
    });
  </script>
</body>
</html>
