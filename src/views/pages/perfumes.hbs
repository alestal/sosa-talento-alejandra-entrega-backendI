<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Perfumes</title>
</head>
<body>
  <h1>Perfumes</h1>

  <div id="productos-perfumes">
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    socket.emit('requestPerfumes');

    socket.on('responsePerfumes', (perfumes) => {
      const container = document.getElementById('productos-perfumes');
      container.innerHTML = '';
      perfumes.forEach(product => {
        const div = document.createElement('div');
        div.textContent = `${product.name} - $${product.price}`;
        container.appendChild(div);
      });
    });

    socket.on('error', (msg) => {
      console.error('Error:', msg);
    });
  </script>
</body>
</html>
